<div class="hero-logo -profile">
    {{#if avatar.url}}
      <div class="img-container">
        <img {{bind-attr src=avatar.url}}>
      </div>
    {{/if}}
    {{file-uploader file=avatar multiple=false}}
</div> 

<form {{action "save" on="submit"}} class="create-event">
  <fieldset>
    <label>
      Nombre
      {{input type="text" value=model.name}}
    </label>
  </fieldset>
  <fieldset>
    <label>
      Apellido
      {{input type="text" value=model.lastName}}
    </label>
  </fieldset>
  <fieldset>
    <label>
      Nombre Completo
      {{input type="text" value=model.fullName}}
    </label>
  </fieldset>
  <fieldset>
    <input type="submit" value="Guardar">
  </fieldset>
</form>
    
