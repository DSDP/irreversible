<form {{action "save" on="submit"}} class="create-event">
  <fieldset>
    <label>
      Numero
      {{input type="text" value=model.number}}
    </label>
  </fieldset>
  <fieldset>
    <label>
      Avales necesarios
      {{input type="text" value=model.avalesNeed}}
    </label>
  </fieldset>
  <fieldset>
    <label>
      Avales cargados
      {{input type="text" value=model.avalesEntry}}
    </label>
  </fieldset>
  <fieldset>
    <label>
      Provincia
      {{model-finder modelName='province' list=model.province labelPath="name" sigle=true}}
    </label>
  </fieldset>    
  <fieldset>
    <label>
      Seccion Electoral
      {{model-finder modelName='electoral-section' list=model.electoralSection labelPath="name" sigle=true}}
    </label>
  </fieldset>  
  <fieldset>
    <label>
      Municipio
      {{model-finder modelName='town' list=model.town labelPath="name" sigle=true}}
    </label>
  </fieldset>   
  <fieldset>
    <label>
      Lista
      {{model-finder modelName='electoral-list' list=model.list labelPath="number" sigle=true}}
    </label>
  </fieldset>     
  <fieldset>
    <input type="submit" value="Guardar">
  </fieldset>
</form>
    
